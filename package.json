{
  "scripts": {
    "serve": "web-dev-server --port 8001 --root-dir build",
    "dev": "concurrently -n tsc,wds \"tsc --watch --preserveWatchOutput\" \"npx web-dev-server --port 8001 --watch --root-dir build\"",
    "compile": "tsc",
    "build": "npm run compile && ./build-wasm.sh && npm run build-index",
    "build-index": "node build-index.mjs",
    "build-cached": "npm run compile && npm run build-index",
    "test": "wdio run test/wdio.conf.ts --autoCompileOpts.tsNodeOpts.project=test/tsconfig.json",
    "test-extra": "wdio run test/extra.conf.ts --autoCompileOpts.tsNodeOpts.project=test/tsconfig.json",
    "precommit": "npx check-clang-format"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@jspm/generator": "^1.0.0",
    "@lit-labs/context": "^0.1.3",
    "@types/jasmine": "^4.3.0",
    "@types/node": "^14.11.2",
    "@types/wicg-file-system-access": "^2020.9.5",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@wdio/cli": "^8.3.10",
    "@wdio/jasmine-framework": "^8.3.10",
    "@wdio/local-runner": "^8.3.10",
    "@wdio/spec-reporter": "^8.3.0",
    "@web/dev-server": "^0.1.33",
    "chromedriver": "^109",
    "clang-format": "^1.8.0",
    "concurrently": "^7.4.0",
    "emscripten-sdk-npm": "github:devappd/emscripten-sdk-npm",
    "eslint": "^8.27.0",
    "eslint-config-google": "^0.14.0",
    "lit": "^2.3.0",
    "tree-sitter-cli": "^0.20.6",
    "tree-sitter-markdown": "github:MDeiml/tree-sitter-markdown",
    "ts-lit-plugin": "^1.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "wdio-chromedriver-service": "^8.1.1",
    "web-tree-sitter": "^0.20.5",
    "webdriverio": "^8.3.10"
  }
}
